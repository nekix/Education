@using CarPark.ViewModels.Enterprises
@model EnterpriseDetailsViewModel

@{
    ViewData["Title"] = $"Enterprise - {Model.Name}";
}

<div class="container-fluid">
    <!-- Enterprise Header -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="card-title mb-0">
                    <i class="fas fa-building me-2"></i>@Model.Name
                </h1>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light btn-sm">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.Id)</label>
                        <div class="fs-5">@Model.Id</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.LegalAddress)</label>
                        <div class="fs-6">@Model.LegalAddress</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.TimeZone)</label>
                        <div class="fs-6">@Model.TimeZone?.Name</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Tabs -->
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" id="managementTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="vehicles-tab" data-bs-toggle="tab" data-bs-target="#vehicles" type="button" role="tab" aria-controls="vehicles" aria-selected="true">
                        <i class="fas fa-car me-2"></i>Vehicles
                    </button>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content" id="managementTabsContent">
                <!-- Vehicles Tab -->
                <div class="tab-pane fade show active" id="vehicles" role="tabpanel" aria-labelledby="vehicles-tab">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="mb-3">Vehicle Management</h5>
                            <p class="text-muted mb-4">Manage all vehicles belonging to this enterprise. You can view, add, edit, and remove vehicles from your fleet.</p>
                            
                            <div class="d-flex gap-2 flex-wrap">
                                <a asp-area="" asp-controller="Vehicles" asp-action="Index" asp-route-enterpriseId="@Model.Id" class="btn btn-primary">
                                    <i class="fas fa-list me-2"></i>View All Vehicles
                                </a>
                                <a asp-area="" asp-controller="Vehicles" asp-action="Create" asp-route-enterpriseId="@Model.Id" class="btn btn-success">
                                    <i class="fas fa-plus me-2"></i>Add New Vehicle
                                </a>
                            </div>
                        </div>
@*                         <div class="col-md-4">
                            <div class="bg-light p-3 rounded">
                                <h6 class="fw-bold mb-2">Quick Stats</h6>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Total Vehicles:</span>
                                    <span class="fw-bold">-</span>
                                </div>
                            </div>
                        </div> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>