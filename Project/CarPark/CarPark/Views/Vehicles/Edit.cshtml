@using CarPark.ViewModels.Vehicles
@model VehicleViewModel

@{
    ViewData["Title"] = $"Edit Vehicle - {ViewBag.Enterprise.Name}";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Edit Vehicle - @ViewBag.Enterprise.Name</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly disabled />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <input type="hidden" name="EnterpriseId" value="@ViewBag.Enterprise.Id" />
            <div class="form-group">
                <label asp-for="Model.Id" class="control-label">Model</label>
                <select name="ModelId" asp-for="Model.Id" class="form-control" asp-items="@(new SelectList(ViewBag.Models, "Id", "ModelName", Model.Model.Id))"></select>
            </div>
            <div class="form-group">
                <label asp-for="VinNumber" class="control-label"></label>
                <input name="VinNumber" asp-for="VinNumber" class="form-control" />
                <span asp-validation-for="VinNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input name="Price" asp-for="Price" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufactureYear" class="control-label"></label>
                <input name="ManufactureYear" asp-for="ManufactureYear" type="number" class="form-control" />
                <span asp-validation-for="ManufactureYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mileage" class="control-label"></label>
                <input name="Mileage" asp-for="Mileage" type="number" class="form-control" />
                <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input name="Color" asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-enterpriseId="@ViewBag.Enterprise.Id" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
