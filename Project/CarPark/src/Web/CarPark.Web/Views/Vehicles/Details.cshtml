@using CarPark.ViewModels.Vehicles
@model VehicleViewModel

@{
    ViewData["Title"] = $"Vehicle - {Model.Model.Name}";
    var now = DateTimeOffset.Now;
    var oneWeekAgo = now.AddDays(-7);
}

<div class="container-fluid">
    <!-- Vehicle Header -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="card-title mb-0">
                    <i class="fas fa-car me-2"></i>Vehicle - @Model.Model.Name
                </h1>
                <div class="d-flex gap-2">
                    <a asp-action="Edit"
                       asp-route-enterpriseId="@Model.Enterprise.Id"
                       asp-route-id="@Model.Id"
                       class="btn btn-light btn-sm">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <a asp-action="Delete"
                       asp-route-enterpriseId="@Model.Enterprise.Id"
                       asp-route-id="@Model.Id"
                       class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt me-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="mb-2">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.Id)</label>
                        <div class="fs-6">@Model.Id</div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-2">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.Model.Name)</label>
                        <div class="fs-6">@Model.Model.Name</div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-2">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.Enterprise.Name)</label>
                        <div class="fs-6">@Model.Enterprise.Name</div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-2">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.VinNumber)</label>
                        <div class="fs-6">@Model.VinNumber</div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-2">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.Price)</label>
                        <div class="fs-6">@Model.Price</div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-2">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.ManufactureYear)</label>
                        <div class="fs-6">@Model.ManufactureYear</div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-2">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.Mileage)</label>
                        <div class="fs-6">@Model.Mileage</div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-2">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.Color)</label>
                        <div class="fs-6">@Model.Color</div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-2">
                        <label class="form-label fw-bold text-muted">@Html.DisplayNameFor(m => m.AddedToEnterpriseAt)</label>
                        <div class="fs-6">@Model.AddedToEnterpriseAt</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Rides Management -->
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" id="vehicleTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active"
                            id="rides-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#rides"
                            type="button"
                            role="tab"
                            aria-controls="rides"
                            aria-selected="true">
                        <i class="fas fa-route me-2"></i>Rides
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content" id="vehicleTabsContent">
                <!-- Rides Tab -->
                <div class="tab-pane fade show active" id="rides" role="tabpanel" aria-labelledby="rides-tab">
                    <!-- Upload GPX section -->
                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-upload me-2"></i>Upload GPX Track
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">
                                Upload a GPX file to create a new ride with track data for this vehicle.
                            </p>
                            <form id="uploadForm" enctype="multipart/form-data" method="post">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label for="gpxFile" class="form-label fw-bold">Select GPX file</label>
                                            <input type="file"
                                                   id="gpxFile"
                                                   name="file"
                                                   accept=".gpx"
                                                   class="form-control"
                                                   required />
                                            <div class="form-text">Only .gpx files are supported</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="fas fa-upload"></i>Upload Track
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <div id="uploadStatus" class="mt-3"></div>
                        </div>
                    </div>

                    <!-- Track period and map -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0">View Track on Map</h6>
                        </div>
                        <div class="card-body">
                            <form asp-area=""
                                  asp-action="Index"
                                  asp-controller="Tracks"
                                  method="get"
                                  asp-route-enterpriseId="@Model.Enterprise.Id"
                                  asp-route-vehicleId="@Model.Id">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="startTimeInput" class="form-label">Start Time</label>
                                        <input type="datetime-local"
                                               id="startTimeInput"
                                               name="startDate"
                                               class="form-control"
                                               value="@oneWeekAgo.ToString("yyyy-MM-ddTHH:mm")" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="endTimeInput" class="form-label">End Time</label>
                                        <input type="datetime-local"
                                               id="endTimeInput"
                                               name="endDate"
                                               class="form-control"
                                               value="@now.ToString("yyyy-MM-ddTHH:mm")" />
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-map-marked-alt me-2"></i>Open map
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Rides list -->
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">Rides</h6>
                        </div>
                        <div class="card-body">
                            <div id="ridesContainer"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back button -->
    <div class="mt-4">
        <a asp-action="Index"
           asp-route-enterpriseId="@Model.Enterprise.Id"
           class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

@section Scripts
{
    <script>
        window.vehicleId = '@Model.Id';
    </script>
    <script src="~/lib/axios/axios.js"></script>
    <script src="~/js/api-clients/rides-client.js"></script>
    <script src="~/js/views/vehicles/details.js"></script>
}